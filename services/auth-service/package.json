{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication microservice",
  "scripts": {
    "prebuild": "node -e \"const fs=require('fs'); fs.rmSync('dist', {recursive:true, force:true}); fs.rmSync('tsconfig.build.tsbuildinfo', {force:true})\"",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main",
    "start:dev": "npm run build && node dist/main",
    "start:prod": "node dist/main",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^6.0.0",
    "@prisma/adapter-pg": "^6.0.0",
    "pg": "^8.11.0",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "prisma": "^6.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}